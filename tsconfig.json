{
    "compilerOptions": {
      "target": "es2017",
      "lib": ["es6"],
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "baseUrl": "./",
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node",
        "reflect-metadata"
      ],
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }